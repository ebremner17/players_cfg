/**
 * Function to get list of colours.
 *
 * @return string
 *   String of colours.
 */
function _players_cfg_colours(): string {

  $colours = '';

  $path = \Drupal::service('extension.list.module')->getPath('players_cfg');

  $row = 0;
  if (($handle = fopen($path . '/colors.csv', "r")) !== FALSE) {
    while (($data = fgetcsv($handle, 1000, ",")) !== FALSE) {

      if ($row > 0) {
        $colours .= ',';
      }
      $num = count($data);
      $row++;
      for ($c=0; $c < $num; $c++) {
        $colours .= $data[$c];
      }
    }
    fclose($handle);
  }

  return $colours;
}

